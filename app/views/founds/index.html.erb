<p id="notice"><%= notice %></p>

<h1>Founds</h1>

<table>
  <thead>
    <tr>
      <th>Comments</th>
      <th>Resolved</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @founds.each do |found| %>
      <tr>
        <td><%= found.comments %></td>
        <td><%= found.resolved %></td>
        <td><%= found.user_id %></td>
        <td><%= link_to 'Show', found %></td>
        <td><%= link_to 'Edit', edit_found_path(found) %></td>
        <td><%= link_to 'Destroy', found, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


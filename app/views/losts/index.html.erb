<header class="page-header">
  <h2>Lost animals</h2>
  <%= link_to 'New', new_lost_path, class: 'pageLink' %>
</header>
<div class="page-body">
  <% @losts.each do |lost| %>
    <section>
      <div class="petDetails">
        <div class="detailsRow">
          <div class="itemDetail">
            <label>
              <%= 'Reported by: ' + lost.user.fullname %>
            </label>
          </div>
          <% if lost.user == current_user %>
            <%= link_to '', edit_lost_path(lost), class: 'image-link pencil-bg' %>
          <% end %>
        </div>
        <div class="detailsRow">
          <div class="itemDetail">
            <%= lost.comments %>
          </div>
        </div>
      </div>
      <div class="petPhotos">
        <% lost.photos.each do |image| %>
            <div class="petPhotoContainer">
              <%= link_to edit_lost_photo_path(image) do %>
                <div class="petPhotoPanel">
                  <div class="petPhoto">
                    <% if image.photo.persisted? %>
                      <%= image_tag image.photo %>
                    <% end %>
                  </div>
                </div>
              <% end %>
            </div>
          
        <% end %>
      </div>

    </section>
    <br/>
  <% end %>

</div>
